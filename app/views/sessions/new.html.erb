<!-- LOGIN SECTION -->
<section class="clearfix loginSection" style="margin-top: 80px">
	<div class="container">
						<% flash.each do |message_type, message| %>
						  <div class="alert alert-<%= message_type %>"><%= message %></div>
						<% end %>
		<div class="row">
			<div class="center-block col-md-5 col-sm-6 col-xs-12">
				<div class="panel panel-default loginPanel">
					<div class="panel-heading text-center">Members log in</div>
					<div class="panel-body">
						<%= form_for(:session, url: login_path, html: {class: "loginForm"}) do |f| %>
							<div class="form-group">
								<%= f.label :email, "Email*" %>
								<%= f.email_field :email, class: "form-control" %>
								<p class="help-block">Enter your email.</p>
							</div>
							<div class="form-group">
								<%= f.label :Password, "Password*" %>
								<%= f.password_field :password, class: "form-control" %>
								<p class="help-block">Enter the password that accompanies your email.</p>
							</div>
							<div class="form-group">
								<%= f.button "Log In", class: "btn btn-primary pull-left" %>
								<a href="#" class="pull-right link">Fogot Password?</a>
							</div>
						<% end %>
					</div>
					<div class="panel-footer text-center">
						<p>No eres miembro todavia? <%= link_to "Sign up now!", signup_path, class: "link" %> y Anunciate</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
