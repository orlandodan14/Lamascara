<!-- LOGIN  MODAL -->
<div id="loginModal" tabindex="-1" class="modal fade" role="dialog">
<div class="modal-dialog">

  <!-- Modal content-->
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Log In to your Account</h4>
    </div>
    <div class="modal-body">
    	<%= form_for(:session, url: login_path, html: {class: "loginForm"}) do |f| %>
	        <div class="form-group">
	         	<i class="fa fa-envelope" aria-hidden="true"></i>
				<%= f.email_field :email, class: "form-control", placeholder: "Email" %>
	        </div>
	        <div class="form-group">
		        <i class="fa fa-lock" aria-hidden="true"></i>
				<%= f.password_field :password, class: "form-control", placeholder: "Password" %>
	        </div>
	        <div class="form-group">
				<%= f.button "Log In", class: "btn btn-primary btn-block" %>
	        </div>
	        <div class="checkbox">
	          <label><input type="checkbox"> Remember me</label>
	          <a href="#" class="pull-right link">Fogot Password?</a>
	        </div>
     	<% end %>
    </div>
    <div class="modal-footer">
      <p>Donâ€™t have an Account? <a href="#" class="link">Sign up</a></p>
    </div>
  </div>

</div>
</div>